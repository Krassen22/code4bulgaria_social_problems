<div class="form-horizontal">
<h2>Create problem</h2>
<%= form_for(@problem, url: { action: 'create' } , class: "form-horizontal") do |f| %>
	<div class="form-group">
      <%= f.label :description, class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_area :description, autocomplete: "off", class: "form-control", placeholder: "Description" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :picture, class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_field :picture, autocomplete: "off", class: "form-control", placeholder: "Picture" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :lat_one, class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_field :lat_one, autocomplete: "off", class: "form-control", placeholder: "Lat One" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :lat_two, class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_field :lat_two, autocomplete: "off", class: "form-control", placeholder: "Lat Two" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Create Problem", class: "btn btn-default" %> 
      </div>
    </div>
<% end %>
</div>