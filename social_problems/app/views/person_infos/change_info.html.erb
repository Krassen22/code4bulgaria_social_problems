<div class="form-horizontal">
<h2>Change info</h2>
<%= form_for(@infos, url: { action: 'create' } , class: "form-horizontal") do |f| %>
	<div class="form-group">
      <%= f.label :town, class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_field :town, autocomplete: "off", class: "form-control", placeholder: "Town" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :first_name, class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_field :first_name, autocomplete: "off", class: "form-control", placeholder: "First Name" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :second_name, class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_field :second_name, autocomplete: "off", class: "form-control", placeholder: "Second Name" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :last_name, class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_field :last_name, autocomplete: "off", class: "form-control", placeholder: "Last Name" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :address, class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_field :address, autocomplete: "off", class: "form-control", placeholder: "Address" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :mobile_num, class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_field :mobile_num, autocomplete: "off", class: "form-control", placeholder: "Mobile number" %>
      </div>
    </div>
     <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Update", class: "btn btn-default" %> 
      </div>
    </div>
<% end %>