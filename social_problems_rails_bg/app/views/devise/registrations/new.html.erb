
<div class="form-horizontal">
<div class="alert alert-danger" role="alert"><h2>Регистрирай се</h2></div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:"form-horizontal") do |f| %>
  <%= devise_error_messages_c! %>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Имейл</label>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Имейл" %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword3" class="col-sm-2 control-label">Парола</label>
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Парола" %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword3" class="col-sm-2 control-label">Потвърждение на паролата</label>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Парола" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Регистрация", class: "btn btn-default" %> 
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= render "devise/shared/links"%>
    </div>
  </div>
</div>